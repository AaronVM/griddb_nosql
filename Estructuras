void Disponible (int Inicio, char Info[8][2], int Indice[8], bool Dispo)
{
	int Apuntador = Inicio;
	
	while(Apuntador != -999)
	{
		if(Info[Apuntador] == " ")
		{
			Dispo = true;
			printf("\n Campo disponible en la celda: \n");
			printf("%d", Apuntador);
				
		}
		Dispo = false;
		Apuntador = Indice[Apuntador];
	}
	
}


void Agregar (int Inicio, char Info[8][2], int Indice[8], char Dispo[])
{
	int Apuntador = Inicio; 
//	char Disp[] = "-";
	while(Apuntador != -999)
	{
		if (Info[Apuntador] == " ")
		{
			scanf("%c", &Dispo);
		}
		
		Apuntador = Indice[Apuntador];
	}
	
}

void Eliminar (int Inicio, char Info[8][2], int Indice[8])
{
	int Apuntador = Inicio;
	int Temp = Inicio;
	while(Apuntador != -999)
	{
		
		
		Apuntador = Indice[Apuntador];
	}
	
 } 
